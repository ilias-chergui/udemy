<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../public/style.css">
    <title>Movies</title>
</head>
<body>
    <% include ./partials/header %>

    <div class="container">
        <div class="info">
            <h2> <%= title1 %> </h2>
    
            <% for( movie of movies) { %>
                <p>
                    <%= movie.title %> (<%= movie.year%>)
                </p>
            <% } %>
        </div>

        <div class="french-movie">
            <h2> <%= title2 %> </h2>
            <form action="/movies" method="POST">
                <label for="movieTitle">Titre du film: </label>
                <input type="text" name="movieTitle" id="movieTitle">

                <label for="movieYear">L'ann√©e du film: </label>
                <input type="text" name="movieYear" id="movieYear">

                <button type="submit">Ajouter</button>
            </form>
        </div>

    </div>

    <% include ./partials/footer %>

    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', addMovie);

        function addMovie(event) {
            event.preventDefault();
            
            if (Window.fetch) {
                fetch('/movies', {
                    method: 'POST',
                    body: new FormData(form)
                })
                .then(checkStatus)
                .catch(function(error) {
                    console.log('request failled', error);
                })
            }
            // else {
            //     jQuery();
            //     XMLHttpRequest();
            // }
        }

        function checkStatus(response) {
            if (response.statut >= 200 && response.status < 300) {
                let newMovieDiv = document.createElement('div');
                const movieTitle = document.getElementById('movieTitle').value;
                const movieYear = document.getElementById('movieYear').value;

                newMovieDiv.innerHTML = `${movieTitle} (${movieYear})`;

                document.querySelector('.french-movie').appendChild(newMovieDiv);
                form.reset();
            }
        }
    </script>
</body>
</html>