<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../public/style.css">
    <title>Search</title>
</head>
<body>
    <% include ./partials/header %>

    <div class="container">

        <h1>Votre recherche :</h1>

        <input type="text" name='Search' id="Search" placeholder="Votre recherche de film">
        <button id="btnSearch">Rechercher</button>

    </div>

    <div id="result">

    </div>

    <% include ./partials/footer %>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        const API_KEY = 'bc05c563';
        const Search = document.querySelector('#Search');
        const btnSearch = document.querySelector('#btnSearch');
        btnSearch.addEventListener('click', search);

        let resultsDiv = document.querySelector('#result');

        function search() {
           const query = `http://www.omdbapi.com/?i=${Search.value}&apikey=${API_KEY}&language=fr-FR`;

           axios.get(query)
            .then(function(response) {
                console.log(response); 
            });
        }
    </script>
</body>
</html>